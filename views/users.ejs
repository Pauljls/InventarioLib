<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/users.css">
    <title>Usuarios</title>
</head>
<body>
  <%const dashboard='../dashboard'%>
  <%const path='./equiposInformaticos/'%>
        <!--NAVBAR CSS-->
        <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark" >
          <div class="container-fluid">
            <a class="navbar-brand" href="<%=dashboard%>">Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="<%=path%>cpus">Cpus</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%=path%>impresoras">Impresoras</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%=path%>perifericos">Perifericos</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%=path%>transformadores">Transformadores</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%=path%>monitores">Monitores</a>
                </li>
               
              </ul>
              <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
              </form>
            </div>
          </div>
        </nav>
       
    <!--CONTENT-->
    <h1>Bienvenido</h1>
    <p>Esta es la lista de usuarios</p>
    <div class="table-container">
      <table id="element-table">
          <thead>
              <tr>
                  <th>Id</th>
                  <th>Nombre</th>
                  <th>Apellido paterno</th>
                  <th>Apellido materno</th>
              </tr>
          </thead>
          <tbody id="users-tbody">
              <% userList.forEach(user => { %>
                  <tr>
                      <td><%= user._id %></td>
                      <td><%= user.nombre %></td>
                      <td><%= user.apellidoP %></td>
                      <td><%= user.apellidoM %></td>
                  </tr>
              <% }) %>
          </tbody>
      </table>
    </div>
      <a href="/users/registro" id = "add-btn">Agregar</a>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
